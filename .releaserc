{
  "branches": ["main"],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    "@semantic-release/changelog",
    [
      "semantic-release-replace-plugin",
      {
        "replacements": [
          {
            "files": ["pyproject.toml"],
            "from": "(?<=\\[project\\]\\n(?:.*\\n)*?)version\\s*=\\s*\".*?\"",
            "to": "version = \"${nextRelease.version}\"",
            "results": [
              {
                "file": "pyproject.toml",
                "hasChanged": true,
                "numMatches": 1,
                "numReplacements": 1
              }
            ],
            "countMatches": true
          },
          {
            "files": ["uv.lock", "pypjt/resources/uv.lock"],
            "from": "(\\[\\[package\\]\\](?:.|\\n)*?name\\s*=\\s*\\\"pypjt\\\"(?:.|\\n)*?version\\s*=\\s*)\\\".*?\\\"",
            "to": "$1\"${nextRelease.version}\"",
            "results": [
              {
                "file": "uv.lock",
                "hasChanged": true,
                "numMatches": 1,
                "numReplacements": 1
              },
              {
                "file": "pypjt/resources/uv.lock",
                "hasChanged": true,
                "numMatches": 1,
                "numReplacements": 1
              }
            ],
            "countMatches": true
          }
        ]
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["pyproject.toml", "CHANGELOG.md"]
      }
    ],
    "@semantic-release/github"
  ],
  "preset": "conventionalcommits",
  "changelogFile": "CHANGELOG.md"
}
